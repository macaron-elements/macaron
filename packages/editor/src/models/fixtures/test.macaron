<macaron-component name="my-component">
  <macaron-variant x="0" y="0"></macaron-variant>
  <macaron-variant x="200" y="0" selector=":hover"></macaron-variant>
  <macaron-variant x="400" y="0" media="(max-width: 768px)"></macaron-variant>
  <template>
    <h1 title="Hover Me" id="heading">Hello, <em id="em">World!</em></h1>
    <div id="div1">Type something</div>
  </template>
  <style>
    :host {
        font-family: Helvetica
    }
    #heading {
        color: #FF0000
    }
    :host(:hover) {
        font-family: Menlo
    }
    :host(:hover) #heading {
        color: #0000FF
    }
    @media (max-width: 768px) {
        :host {
            font-family: Avenir Next
        }
        #heading {
            color: #008000
        }
    }
  </style>
</macaron-component>
