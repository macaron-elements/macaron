{
  "name": "@macaron-elements/compiler",
  "version": "0.1.1",
  "description": "Macaron compiler",
  "homepage": "https://github.com/macaron-elements/macaron/tree/main/packages/compiler#readme",
  "bugs": {
    "url": "https://github.com/macaron-elements/macaron/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macaron-elements/macaron.git"
  },
  "license": "MIT",
  "author": "Ryohei Ikegami <iofg2100@gmail.com>",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "macaron": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "lib",
    "README.md"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:bundle": "node build.js",
    "build:ts": "tsc -p tsconfig.build.json",
    "dev": "run-p dev:*",
    "dev:bundle": "node build.js --dev",
    "dev:ts": "tsc -p tsconfig.build.json -w",
    "format": "prettier -w src",
    "lint": "eslint src",
    "prepare": "npm run build",
    "test": "vitest --run"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "prettier": "^2.6.2",
    "slash": "^4.0.0"
  },
  "devDependencies": {
    "@types/chokidar": "2.1.3",
    "@types/glob": "7.2.0",
    "@types/hast": "2.3.4",
    "@types/minimatch": "3.0.5",
    "@types/prettier": "2.6.3",
    "@types/shelljs": "0.8.11",
    "commander": "9.3.0",
    "dedent": "0.7.0",
    "glob": "8.0.3",
    "hast-util-from-parse5": "7.1.0",
    "hast-util-to-html": "8.0.3",
    "lodash-es": "4.17.21",
    "minimatch": "5.1.0",
    "parse5": "7.0.0",
    "prettier": "2.6.2",
    "replace-css-url": "1.2.6",
    "shelljs": "0.8.5",
    "tmp-promise": "3.0.3",
    "vitest": "0.13.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
